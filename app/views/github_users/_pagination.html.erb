<nav aria-label="Page navigation">
  <ul class="pagination">
    <li>
      <%= link_to prev_path, "aria-label": "Previous", remote: true do %>
          <span aria-hidden="true">&laquo;</span>
      <% end %>
    </li>
    <% current_page.upto(current_page +(5 - 1)) do |page| %>
        <% if current_page == page %>
          <li class="active"><%= link_to "#{page}", {:controller => "github_users", :action => "page", :page => page}, remote: true %></li>
        <% else %>
          <li><%= link_to "#{page}", {:controller => "github_users", :action => "page", :page => page}, remote: true %></a></li>
        <% end %>
        <% break if page == total_pages %>
    <% end %>
    <li>
      <%= link_to next_path, "aria-label": "Next", id: "next-link", remote: true do %>
          <span aria-hidden="true">&raquo;</span>
      <% end %>
    </li>
  </ul>
</nav>